import random

def Randomnumber():
    random_number = random.randint(1, 100)
    return random_number

def InputNum():
    guess_number = int(input("Enter number:"))
    return guess_number

def CheckNum(random_number, number):
    if number == random_number:
        return "Correct, you're the winner"
    else:
        return "Not correct!!!"

def showResult(random_number):
    print("-----------------------------")
    print("        GAME BINGO           ")
    print("-----------------------------")
    print(f"Random Number: {random_number}")

random_number = Randomnumber()
guess_number = InputNum()
result = CheckNum(random_number, guess_number)
showResult(random_number)
print(result)
